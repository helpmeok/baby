.search-box {
  padding: 0 30rpx;
  height: 100rpx;
  border-bottom: 2rpx solid #f1f1f1;
  position: relative;
  left: 0;
  top: 0;
}
.search-box .search {
  background-color: #f5f5f5;
  padding: 5rpx 20rpx;
  width: 80%;
  border-radius: 10rpx;
}
.container .content {
  padding: 30rpx;
}
.container .content .item {
  border: 2rpx solid #cccccc;
  height: 60rpx;
  padding: 0rpx 20rpx;
  border-radius: 30rpx;
  line-height: 60rpx;
  margin-right: 30rpx;
  margin-top: 20rpx;
}
.container .scroll-view {
  height: calc(100% - 100rpx) !important;
}

