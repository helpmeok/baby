.search-box {
  padding: 0 30rpx;
  height: 50px;
  border-bottom: 2rpx solid #f1f1f1;
  position: fixed;
  left: 0;
  z-index: 999;
  background-color: white;
  width: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.search-box .search {
  background-color: #f5f5f5;
  padding: 5rpx 20rpx;
  width: 90%;
  -webkit-border-radius: 10rpx;
          border-radius: 10rpx;
}
.container .contents {
  position: fixed;
  left: 0;
  width: 100%;
  padding: 30rpx;
}
.container .contents .item {
  border: 2rpx solid #cccccc;
  height: 60rpx;
  padding: 0rpx 20rpx;
  -webkit-border-radius: 30rpx;
          border-radius: 30rpx;
  line-height: 60rpx;
  margin-right: 30rpx;
  margin-top: 20rpx;
}
.container .scroll-view {
  position: fixed;
  left: 0;
  width: 100%;
  padding: 0;
  margin: 0;
}
.container .empty-box {
  position: fixed;
  left: 0;
  width: 100%;
  padding: 0;
  margin: 0;
}

