.header-detail {
  width: 100%;
  height: 200rpx;
  padding: 0 30rpx 0 0;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.header-detail .portrait {
  width: 150rpx !important;
  height: 150rpx !important;
  border-radius: 50%;
}
.header-detail .attention-btn {
  background-color: #e33;
  height: 50rpx;
  width: 280rpx;
  border-radius: 25rpx;
  color: white;
}
.header-detail .recommend-btn {
  border: 2rpx solid #cccccc;
  height: 46rpx;
  width: 180rpx;
  border-radius: 25rpx;
}
.approve,
.desc {
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
      -ms-flex-align: start;
          align-items: flex-start;
  padding: 10rpx 20rpx;
}
.recommend-scroll {
  background-color: #f5f5f5;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  height: 0rpx;
  white-space: nowrap;
  overflow: hidden;
  width: 100%;
  -webkit-transition: height 0.5s;
  -o-transition: height 0.5s;
  transition: height 0.5s;
  padding: 0 20rpx;
}
.recommend-scroll .recommend-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-wrap: nowrap;
      -ms-flex-wrap: nowrap;
          flex-wrap: nowrap;
  -webkit-box-align: center;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
}
.recommend-scroll .recommend-box .list-item {
  background-color: #ffffff;
  height: 350rpx;
  width: 250rpx;
  margin-right: 20rpx;
}
.recommend-scroll .recommend-box .list-item .portrait {
  width: 100rpx !important;
  height: 100rpx !important;
  border-radius: 50%;
}
.show-recommend-scroll,
.recommend-box {
  height: 400rpx;
  -webkit-transition: height 0.5s;
  -o-transition: height 0.5s;
  transition: height 0.5s;
}

